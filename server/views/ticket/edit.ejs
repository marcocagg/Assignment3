<%- include ("../partials/header") %>
<%- include ("../partials/main_nav") %>
<!--Content for the edit page-->

<div class="container">
    <div class="row"> 
        <div class="col-md-offset-3 col-md-6">
            <h1 class="ticketTitle"> <%= title %></h1> <br><br>
            <!--Form for editing an existing object from the database-->
            <form class="form" method="POST">
                <div class="form-group">
                <!--Text field for name-->
                <!--Value will match the portion of the schema of the object-->
                    <label for="nameTextField"> Name </label>
                    <input type="text" class=form-control 
                    id="nameTextField"
                    placeholder="Enter the Name of the Requester"
                    name="name" 
                    value = "<%= ticket.name %>"
                    required>
                </div>

                 <div class="form-group">
                    <!--text field for request details, set as a textarea-->
                    <!--Value will match the portion of the schema of the object-->
                    <label for="requestTextField"> Request Details </label>
                    <textarea type="text" class=form-control 
                    id="requestTextField"
                    placeholder="Enter the Request Details"
                    name="request"
                    required><%= ticket.request %></textarea>
                </div>
                
                 <div class="form-group">
                    <!--field for entering date-->
                    <!--when clicked on it will change the field from a text to a date entry-->
                    <!--Value will match the portion of the schema of the object-->
                    <label for="dateTextField"> Date of Request </label>
                    <input type="text" class=form-control 
                    id="dateTextField"
                    placeholder="Enter the Date of Request (YYYY/MM/DD)"
                    name="date" 
                    value = "<%= ticket.date %>"
                    onfocus="(this.type='date')"
                    required>
                </div>

                 <div class="form-group">
                    <!--text field for entering a priority level-->
                    <!--Value will match the portion of the schema of the object-->
                    <label for="priorityTextField"> Priority </label>
                    <input type="text" class=form-control 
                    id="priorityTextField"
                    placeholder="Enter the Priority Level "
                    name="priority" 
                    value = "<%= ticket.priority %>"
                    required>
                </div>

                <div class="form-group">
                    <!--text field for entering a status-->
                    <!--Value will match the portion of the schema of the object-->
                    <label for="statusTextField"> Status </label>
                    <input type="text" class=form-control 
                    id="statusTextField"
                    placeholder="Enter the status of the request"
                    name="status" 
                    value = "<%= ticket.status %>"
                    required>
                </div>
                <br>
                <!--Submit button will sumbit the changes of the object to the database-->
                <button class="btn btn-primary" type="submit"> 
                    <i class="fas fa-edit"> </i> Submit 
                </button>
                <!--Cancel button will send the user back to the ticket page-->
                <a href="/tickets" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel </a>
            </form>
        </div>
    </div> 
</div> 
<%- include ("../partials/bottom_nav") %>
<%- include ("../partials/footer") %>
